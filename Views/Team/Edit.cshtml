@using WWW_APP_PROJECT.ViewModels
@model EditTeamViewModel;


﻿@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "SidebarLayout";
}


<form method="post" asp-action="Edit" enctype="multipart/form-data">
    
    <input type="hidden" id="Id" name="Id" asp-for="Id" />

    <div class="form-group form-margin" style="max-width: 500px;">
        <label asp-for="Name">First Name</label>
        <input asp-for="Name" class="form-control form-bg grey-text" placeholder="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group form-margin">
        <label asp-for="Image">Image</label>
        <input asp-for="Image" type="file" class="form-control form-bg grey-text" placeholder="Image">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-group center-content">
        <button type="submit" class="btn btn-dark fixed-width-btn">Edit</button>
    </div>
</form>




