@using WWW_APP_PROJECT.Data

@model List<Team>;
<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            <a type="button" class="btn btn-dark" asp-area="" asp-controller="Team" asp-action="Create">Create team</a>
            @foreach (var item in Model)
            {

                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@item.ImageUrl" width="100%" height="225" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@item.Name</p>
                            <p class="card-text">@item.TeamSportDiscipline</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="Team" asp-action="Detail" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-secondary">View</a>
                                    @if (User.Identity.IsAuthenticated && User.IsInRole(UserRoles.Admin))
                                    {
                                        <a asp-controller="Tea," asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <a asp-controller="Team" asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-secondary">Delete</a>
                                    }
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>

            }

        </div>
    </div>
</div>
