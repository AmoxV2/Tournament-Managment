@using WWW_APP_PROJECT.Data
@model Team;

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            <img class="img-fluid rounded" src="@Model.ImageUrl" alt="@Model.Name">
        </div>
        <div class="col-md-4">
            <h2>@Model.Name</h2>
            <p class="lead">@Model.TeamSportDiscipline</p>
            <a class="btn btn-primary mb-3" asp-area="" asp-controller="TeamPlayer"
               asp-action="Create" asp-route-teamId="@Model.Id">Add Player</a>
            <h4>List of players</h4>
            <div class="row">
                @foreach (var player in Model.TeamPlayers)
                {
                    <div class="col-md-6 col-sm-12 mb-4">
                        <div class="card">
                            <img class="card-img-top" src="@player.ImageUrl" alt="@player.FirstName @player.LastName">
                            <div class="card-body">
                                <h5 class="card-title">@player.FirstName @player.LastName</h5>
                                <a class="btn btn-info" asp-area="" asp-controller="TeamPlayer"
                                   asp-action="Detail">Details</a>
                                <a class="btn btn-warning" asp-area="" asp-controller="TeamPlayer"
                                   asp-action="Edit">Edit</a>
                                <a class="btn btn-danger" asp-area="" asp-controller="TeamPlayer"
                                   asp-action="Delete">Delete</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>