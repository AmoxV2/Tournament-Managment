@using WWW_APP_PROJECT.Data

@model Team;


<div class="container">

    <!-- Portfolio Item Heading -->
    <h1 class="my-4">
        Team Details
    </h1>

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src="@Model.ImageUrl" alt="">
        </div>

        <div class="col-md-4">
            <h3 class="my-3">@Model.Name</h3>
            <p>@Model.TeamSportDiscipline</p>
            
            <h3 class="my-4">List of players</h3>

            <div class="row">
                @foreach (var player in Model.TeamPlayers)
                {
                    <div class="col-md-3 col-sm-6 mb-4">
                        <a href="#">
                            <img class="img-fluid" src="@player.ImageUrl" alt="">
                        </a>
                    </div>
                }
                <div class="col-md-3 col-sm-6 mb-4">
                </div>


            </div>
            <a type="button" class="btn btn-dark" asp-area="" asp-controller="Team" asp-action="AddPlayer" asp-route-id="@Model.Id">Add Player</a>
        </div>

    </div>
    <!-- /.row -->
    <!-- Related Projects Row -->
    <h3 class="my-4">List of players</h3>

    <div class="row">
        @foreach (var player in Model.TeamPlayers)
        {
            <div class="col-md-3 col-sm-6 mb-4">
                <a href="#">
                    <img class="img-fluid" src="@player.ImageUrl" alt="">
                </a>
            </div>
        }
        <div class="col-md-3 col-sm-6 mb-4">
           
        </div>

       
    </div>
    <!-- /.row -->

</div>
<!-- /.container -->