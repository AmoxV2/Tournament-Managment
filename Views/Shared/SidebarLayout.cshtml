@using WWW_APP_PROJECT.Data

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=2.0" />
    <title>@ViewData["Title"] - WWW_APP_PROJECT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WWW_APP_PROJECT.styles.css" asp-append-version="true" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <title> Dashboard</title>
    <!--MY CSSS-->
    <link rel="stylesheet" href="css/site.css" />
    <!--Fonts-->
    <!--Holtwood One SC-->
    <link href='https://fonts.googleapis.com/css?family=Holtwood+One+SC' rel='stylesheet' type='text/css'>
    <!--Abel-->
    <link href='https://fonts.googleapis.com/css?family=Abel' rel='stylesheet' type='text/css'>
    <!-- Roboto Condensed-->
    <link href='https://fonts.googleapis.com/css?family=Istok+Web|Roboto+Condensed:700' rel='stylesheet' type='text/css'>

    <!--TrophyIcon-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-darkborder-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">WWW_APP_PROJECT</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>



                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="User" asp-action="Index">Users</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Team" asp-action="Index">Teams</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Tournament" asp-action="Index">Tournaments</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Tournament" asp-action="Index">Dashboard</a>
                            </li>
                           

                        }
                    </ul>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item">
                                    <form asp-area="" asp-controller="Login" asp-action="Logout">
                                        <button class="btn btn-outline-danger">Logout</button>
                                    </form>
                                </li>
                            </ul>
                        }



                        @if (!User.Identity.IsAuthenticated)
                        {
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Register" asp-action="Index">Register</a>
                                </li>
                            </ul>
                        }
                      


                   
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">

          
            <div class="grid-container">

                <!--SideBar-->
                <aside id="sidebar">
                    <div class="sidebar-title">
                        <div class="sidebar-brand">
                            <a class="material-symbols-outlined" asp-area="" asp-controller="Dashboard" asp-action="Index">dashboard</a>  <a class="nav-link text-light" asp-area="" asp-controller="Dashboard" asp-action="Index">Tournament Manager</a>
                        </div>
                        <span class="material-symbols-outlined" oncklick="closeSidebar()">close</span>
                    </div>
                    <ul class="sidebar-list">
                        <li class="sidebar-list-item">
                            <a class="material-symbols-outlined" asp-area="" asp-controller="Tournament" asp-action="Index">rewarded_ads</a>   <a class="nav-link text-light" asp-area="" asp-controller="Tournament" asp-action="Index">Tournaments</a>
                        </li>
                        <li class="sidebar-list-item">
                            <a class="material-symbols-outlined" asp-area="" asp-controller="Team" asp-action="Index">team_dashboard</a> <a class="nav-link text-light" asp-area="" asp-controller="Team" asp-action="Index">Teams</a>
                        </li>
                        @if (User.Identity.IsAuthenticated && User.IsInRole(UserRoles.Admin))
                        {
                            <li class="sidebar-list-item">
                                <a class="material-symbols-outlined" asp-area="" asp-controller="User" asp-action="Index">group</a> <a class="nav-link text-light" asp-area="" asp-controller="User" asp-action="Index">Users</a>
                        </li>}
                        <li class="sidebar-list-item">
                            <a class="material-symbols-outlined" asp-area="" asp-controller="Share" asp-action="Index">group</a> <a class="nav-link text-light" asp-area="" asp-controller="Share" asp-action="Index">My Shares</a>
                        </li>

                    </ul>
                    <ul class="sidebar-list on-bottom-container">
                        <!-- Ustawienia Na Dole -->
                        <li class="sidebar-list-item">
                            <a class="material-symbols-outlined" asp-area="" asp-controller="Dashboard" asp-action="Settings">settings</a> <a class="nav-link text-light" asp-area="" asp-controller="Dashboard" asp-action="Settings">Settings</a>
                        </li>
                    </ul>
                </aside>



                <!--End Sidebar-->
                <!--Main-->
                <main class="main-container">
                    
                        @RenderBody()





           
        </main>

        <!--End Main-->
    </div>

    <!-- MY JS -->
    <script src="js/site.js"></script>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
