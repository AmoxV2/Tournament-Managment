

@model List<SharedTournament>

@{
    Layout = "SidebarLayout";
}

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {

            <div class="col-md-4">
                <div class="card mb-4 box-shadow" style="background-color: rgba(10, 200, 0, 0.1);">
                    <div class="card-body">
                       
                        <p class="card-text">User: @item.AppUser.UserName</p>
                        <p class="card-text">Share trybe: @item.ShareTrybe</p>
                        <p class="card-text">Torunament: @item.TeamTournament.Name</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a type="btn btn-success" asp-controller="Share" asp-action="Delete" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-secondary">Delete</a>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>

        }

    </div>
</div>