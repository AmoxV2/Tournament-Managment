@using Microsoft.AspNetCore.Identity
@using WWW_APP_PROJECT.ViewModels
@model EditUserDashboardViewModel
@using Microsoft.AspNetCore.Identity

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "SidebarLayout";
}  
            <div class="main-title">    
                <h2>Edit Profile </h2>
            </div>

            <form method="post" asp-action="EditUserProfile" enctype="multipart/form-data">
                <input type="hidden" id="Id" name="Id" asp-for="Id" />
                <div class="form-group form-margin">
                    <label asp-for="UserName">Username</label>
                    <input asp-for="UserName" class="form-control form-bg grey-text" placeholder="UserName">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group form-margin">
                    <label asp-for="FirstName">Firstname</label>
                    <input asp-for="FirstName" class="form-control form-bg grey-text" placeholder="FirstName">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group form-margin">
                    <label asp-for="LastName">Lastname</label>
                    <input asp-for="LastName" class="form-control form-bg grey-text" placeholder="LastName">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group form-margin">
                    <label asp-for="Image">Profile Image</label>
                    <input asp-for="Image" type="file" class="form-control form-bg grey-text" placeholder="Image">
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group center-content">
                    <button type="submit" class="btn btn-dark fixed-width-btn">Edit</button>
                </div>
                
            </form>





