@using WWW_APP_PROJECT.ViewModels
@model EditTournamentViewModel;


﻿@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "SidebarLayout";
}


<form method="post" asp-action="Edit" enctype="multipart/form-data">
    
    <input type="hidden" id="Id" name="Id" asp-for="Id" />

    <div class="form-group form-margin" style="max-width: 500px;">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control form-bg grey-text" placeholder="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group form-margin">
        <label asp-for="Description">Description</label>
        <br />
        <input asp-for="Description" class="form-control form-bg grey-text" placeholder="Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group form-margin ">
        <label asp-for="StartDate">Start Date</label>
        <input asp-for="StartDate" class="form-control form-bg grey-text" type="date">
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="form-group form-margin ">
        <label asp-for="EndDate">End Date</label>
        <input asp-for="EndDate" class="form-control form-bg grey-text" type="date">
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <div class="form-group form-margin">
        <label asp-for="Image">Image</label>
        <input asp-for="Image" type="file" class="form-control form-bg grey-text" placeholder="Image">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-group form-margin ">
        <label asp-for="Address.Street">Street</label>
        <input asp-for=Address.Street class="form-control form-bg grey-text" placeholder="Address.Street">
        <span asp-validation-for="Address.Street" class="text-danger"></span>
    </div>
    <div class="form-group form-margin ">
        <label asp-for="Address.City">City</label>
        <input asp-for=Address.City class="form-control form-bg grey-text" placeholder="Address.City">
        <span asp-validation-for="Address.City" class="text-danger"></span>
    </div>
    <div class="form-group form-margin ">
        <label asp-for="Address.State">State</label>
        <input asp-for=Address.State class="form-control form-bg grey-text" placeholder="Address.State">
        <span asp-validation-for="Address.State" class="text-danger"></span>
    </div>
    <div class="form-group form-margin ">
        <input asp-for="IsPublic" type="checkbox" class="form-check-input" />
        <label class="form-check-label" asp-for="IsPublic">Is Public</label>
    </div>
    <div class="form-group center-content">
        <button type="submit" class="btn btn-dark fixed-width-btn">Edit</button>
    </div>
</form>




