@using WWW_APP_PROJECT.Data.Enum
@using WWW_APP_PROJECT.ViewModels
@model CreateTournamentViewModel;


﻿@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "SidebarLayout";
}
            <div class="main-title">
                <h2>Create Tournament</h2>
            </div>
            
                <form method="post" asp-action="Create" enctype="multipart/form-data">
                    <input type="hidden" id="AppUserId" name="AppUserId" asp-for="AppUserId" />
                <div class="form-group form-margin">
                        <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control form-bg grey-text" placeholder="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                <div class="form-group form-margin ">
                        <label asp-for="Description">Description</label>
                    <input asp-for="Description" class="form-control form-bg grey-text" placeholder="Description">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                <div class="form-group form-margin ">
                        <label asp-for="StartDate">Start Date</label>
                    <input asp-for="StartDate" class="form-control form-bg grey-text" type="date">
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                <div class="form-group form-margin ">
                        <label asp-for="EndDate">End Date</label>
                    <input asp-for="EndDate" class="form-control form-bg grey-text" type="date">
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                <div class="form-group form-margin ">
                        <label asp-for="TeamSportDiscipline">Sport discipline</label>
                        <br />
                    <select asp-for="TeamSportDiscipline" class="form-bg grey-text" asp-items="@Html.GetEnumSelectList<TeamSportDiscipline>()">
                            <option>--Select--</option>
                        </select>
                        <span asp-validation-for="TeamSportDiscipline" class="text-danger"></span>
                    </div>
                <div class="form-group form-margin ">
                        <label asp-for="TournamentType">Tournament type</label>
                        <br />
                    <select asp-for="TournamentType" class="form-bg grey-text" asp-items="@Html.GetEnumSelectList<TournamentType>()">
                            <option>--Select--</option>
                        </select>
                        <span asp-validation-for="TournamentType" class="text-danger"></span>
                    </div>
                <div class="form-group form-margin ">
                        <label asp-for="Street">Street</label>
                    <input asp-for=Street class="form-control form-bg grey-text" placeholder="Street">
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>
                <div class="form-group form-margin ">
                        <label asp-for="City">City</label>
                    <input asp-for=City class="form-control form-bg grey-text" placeholder="City">
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                <div class="form-group form-margin ">
                        <label asp-for="State">State</label>
                    <input asp-for=State class="form-control form-bg grey-text" placeholder="State">
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                <div class="form-group form-margin ">
                    <input asp-for="IsPublic" type="checkbox" class="form-check-input" />
                    <label class="form-check-label" asp-for="IsPublic">Is Public</label>
                </div>  
                <div class="form-group center-content">
                <button type="submit" class="btn btn-dark fixed-width-btn">Next</button>
                </div>
                </form>




